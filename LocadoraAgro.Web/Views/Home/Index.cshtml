@model LocadoraAgro.Models.FilmeModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo a Locadora Agro</h1>
    <p><a>Um catalogo de filmes de todos os generos que supera o Netflix</a>!</p>
</div>

<div class="container mt-5">
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Nome do filme</th>
                <th>Quant.Disponivel</th>
                <th>Genero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var filme in Model.Filmes)
            {
                <tr>                    
                    <td>@filme.Nome</td>

                    @if (filme.Quantidade == 0)
                    {
                        <td style="color: red;">Filme indisponivel para logação</td>
                    }
                    else
                    {
                        <td>@filme.Quantidade</td>
                    }
                    
                    <td>@filme.Genero</td>

                    <td>
                        @if (filme.Quantidade == 0)
                        {
                            <a href="#" class="btn btn-primary btn-sm" style="pointer-events: none; opacity: 0.6;">Alugar</a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="AlugarFilme" asp-route-id="@filme.FilmeId" class="btn btn-primary btn-sm">Alugar</a>
                        }
                        </td>
                </tr>
            }
        </tbody>       
    </table>
</div>