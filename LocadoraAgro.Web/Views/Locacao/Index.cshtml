@model LocadoraAgro.Models.ViewModel.ViewLocacao

@{
    ViewData["Title"] = "Alugar filme";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card" style="max-width: 500px; width: 100%;">
        <div class="card-header">
            <h5 class="card-title text-center">Detalhes de locação</h5>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("criaLocacao", "Home")">
                <div class="form-group">
                    <label for="Filme">Filme</label>
                    <input type="text" class="form-control" id="Filme" name="Filme" value="@Model.Filme" />
                </div>

                <div class="form-group mt-3">
                    <label for="dataDevolucao">Data de devolução</label>
                    <input type="date" class="form-control" id="dataDevolucao" name="dataDevolucao" value="@Model.dataDevolucao.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group mt-3">
                    <label for="Locatario">Locatário</label>
                    <input type="text" class="form-control" id="Locatario" name="Locatario" required />
                </div>

                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
